{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=WIN-DE-EDUARDO\\SQLEXPRESS;Initial Catalog=LoggingSystem;Integrated Security=True;Trusted_Connection=True; TrustServerCertificate=True; MultipleActiveResultSets=true;",
          "autoCreateSqlTable": true,
          "schemaName": "dbo",
          "tableName": "Log"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ],
    "Properties": {
      "Application": "LogggingSystem Logging Application"
    }
  },
  "AllowedHosts": "*"
}
